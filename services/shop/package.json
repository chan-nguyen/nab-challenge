{
  "name": "shop",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "NODE_OPTIONS='--dns-result-order=ipv4first' nodemon",
    "debug": "nodemon --exec 'node --dns-result-order=ipv4first --inspect --require dotenv/config --require ts-node/register src/main.ts'",
    "start": "ts-node src/main.ts",
    "build": "yarn type-check",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "jest": "jest --setupFiles dotenv/config --detectOpenHandles",
    "lint": "eslint src",
    "lint:fix": "yarn lint --fix",
    "test": "yarn jest",
    "validate": "yarn lint && yarn type-check && yarn test"
  },
  "dependencies": {
    "@koa/router": "^10.1.1",
    "@nab/db": "^0.1.0",
    "@nab/http": "^0.1.0",
    "@nab/logger": "^0.1.0",
    "axios": "^0.26.1",
    "lodash": "^4.17.21",
    "pg": "^8.7.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/koa__router": "^8.0.11",
    "@types/lodash": "^4.14.181",
    "@types/node": "^17.0.23",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^27.5.1",
    "nock": "^13.2.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "uuid": "^8.3.2"
  },
  "workspaces": {
    "nohoist": [
      "**"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/.tsc-out/"
    ]
  }
}
